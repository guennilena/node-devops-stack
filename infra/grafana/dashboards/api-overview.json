{
  "uid": "api-overview",
  "title": "API Overview",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Requests / sec",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(http_requests_total[1m]))", "legendFormat": "rps" }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP Errors / sec (5xx)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(http_requests_total{status=~\"5..\"}[1m]))", "legendFormat": "5xx rps" }
      ]
    },
    {
      "type": "timeseries",
      "title": "p95 latency (seconds)",
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 },
      "targets": [
        { "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket[5m])))", "legendFormat": "p95" }
      ]
    }
  ],
  "annotations": { "list": [] },
  "templating": { "list": [] }
}
